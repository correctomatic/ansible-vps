version: 0.1
log:
  fields:
    service: registry
storage:
  delete:
    enabled: true
  cache:
    blobdescriptor: inmemory
  filesystem:
    rootdirectory: /var/lib/registry
http:
  addr: :5000
  host: {{ registry.domain }}
  headers:
    X-Content-Type-Options: [nosniff]
  secret: {{ registry_password }}

health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
